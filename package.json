{
  "name": "composableweb.github.io",
  "private": true,
  "description": "ComposableWeb website",
  "version": "1.1.0",
  "author": "Andreas Adam <andreas.adam@composableweb.com> (https://composableweb.com/)",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "semantic-release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "dependencies": {
    "babel-plugin-import-glob-array": "^0.2.0",
    "date-fns": "^2.16.0",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-optipng": "^8.0.0",
    "imagemin-svgo": "^8.0.0",
    "mdx-prism": "^0.3.1",
    "next": "^9.5.2",
    "next-compose-plugins": "^2.2.0",
    "next-google-fonts": "^1.2.1",
    "next-mdx-enhanced": "^4.0.0",
    "next-optimized-images": "^2.6.2",
    "next-seo": "^4.7.3",
    "prestyled": "^0.9.0",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "reading-time": "^1.2.0",
    "rehype": "^11.0.0",
    "remark-autolink-headings": "^6.0.1",
    "remark-code-titles": "^0.1.1",
    "remark-slug": "^6.0.0",
    "responsive-loader": "^2.0.2",
    "sharp": "^0.26.0",
    "slugify": "^1.4.5",
    "theme-ui": "^0.3.1"
  },
  "resolutions": {
    "@mdx-js/react": "1.6.16"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@pacote/eslint-config-jest": "^1.1.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.0.7",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@types/eslint": "^7.2.2",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/imagemin-mozjpeg": "^8.0.0",
    "@types/imagemin-optipng": "^5.2.0",
    "@types/imagemin-svgo": "^7.0.0",
    "@types/node": "^14.6.2",
    "@types/prettier": "^2.1.0",
    "@types/react": "^16.9.48",
    "@types/react-dom": "16.9.8",
    "@types/semantic-release": "^17.1.0",
    "@types/sharp": "^0.25.1",
    "@types/theme-ui": "^0.3.6",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest-dom": "^3.1.7",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.2.13",
    "prettier": "^2.1.1",
    "semantic-release": "^17.1.1",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2"
  },
  "keywords": [
    "nextjs"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pixelmord/composableweb.github.io"
  },
  "bugs": {
    "url": "https://github.com/pixelmord/composableweb.github.io/issues"
  }
}
